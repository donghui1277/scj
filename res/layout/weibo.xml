<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <ImageView 
        android:id="@+id/status_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    
    
    <LinearLayout 
        android:id="@+id/retweet_status_layout"
        android:background="@drawable/ui_toggle_pressed"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/retweet_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CNN"/>
        
        <TextView
        android:id="@+id/retweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextVfdafasfasfdasdfasfddssssssssssssssssssssssssssssssssssssssdfsadfgadsrhjuklkiufdsshjiew" />
        
        <ImageView 
        android:id="@+id/retweet_status_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>